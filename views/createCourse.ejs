<body style="margin-left: 3%;">
    <%- include('./partials/header.ejs', {createCourse: true}) %>
    
    <div style="height: 76vh;">
        <textarea placeholder="Enter Course Creation Text" id="editing" spellcheck="false"
            oninput="update(this.value); sync_scroll(this);" onscroll="sync_scroll(this);"
