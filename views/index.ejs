<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
    <script src="sketch.js"></script>
    <title>Learning Project</title>
</head>
<body>
    <button id="create-course-button" onclick="location.href='./courses/create_course.html'">Create course</button>
    <div id="created-div-title" class="base-title"><h2><b>Site courses:</b></h2></div>
    <div id="courses-div" class="base-div">
        <% courses.forEach(course => { %>
            <div id="<%= course.course_id %>" class="course" onclick="location.href='./courses/<%= course.course_id %>/intro'">
                <h2><%= course.course_title %></h2>
                <img src="./images/<% let imageUrl = course.course_image %><%= imageUrl.substring(imageUrl.lastIndexOf('/') + 1).trim() %>" width="187px" height="200px">
                <p><%= course.course_description %></p>
            </div>
        <% }) %>
    </div>
</body>
</html>